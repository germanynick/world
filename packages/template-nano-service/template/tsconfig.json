{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": [
      {{#jest}}
      "jest",
      {{/jest}}
      "node"
    ],
    "declaration": true,
    "sourceMap": false,
    "target": "es6",
    "baseUrl": "./",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}