{
  "name": "@common/api",
  "version": "1.0.0",
  "description": "My Moleculer microservice",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ../../node_modules/moleculer/bin/moleculer-runner.js --repl --hot --config moleculer.config.ts service.ts",
    "start": "moleculer-runner service.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/node": "^10.9.2",
    "tslint": "^5.11.0",
    "@types/jest": "^23.1.1",
    "jest": "^23.3.0",
    "jest-cli": "^23.3.0",
    "ts-jest": "^23.1.4",
    "moleculer-repl": "^0.5.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "nats": "^1.0.0",
    "moleculer": "^0.13.0",
    "moleculer-web": "^0.8.0",
    "moleculer-service-decorators": "^1.0.4"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}